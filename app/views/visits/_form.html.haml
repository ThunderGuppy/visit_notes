= form_for @visit do |f|
  - if @visit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visit.errors.count, "error")} prohibited this visit from being saved:"
      %ul
        - @visit.errors.full_messages.each do |message|
          %li= message
  %p
  =f.date_field :date
  %p
  =f.text_area :notes
  %p
  .actions
    = f.submit 'Save'
